<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/darker_gray">
    <TextView
        android:id="@+id/fragment_shopping_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Message Fragment"
            android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/fragment_shopping_list_button"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/fragment_shopping_list_title" android:background="@android:color/transparent" android:textFontWeight="700" android:layout_centerHorizontal="true" android:text="Add new item"/>
    <ListView
        android:id="@+id/shopping_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_shopping_list_button"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>